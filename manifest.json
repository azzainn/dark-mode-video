{
    "manifest_version": 3,
    "name": "Dark Mode Video",
    "version": "1.0",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.panopto.com/*"],
        "js": ["contentScript.js"]
      }
    ]
}
  